<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="260dp"
    android:background="@drawable/properties_dialog_bg"
    android:orientation="vertical"
    android:padding="15dp">
    <com.example.vadim.books_sync.views.CustomEditText
        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@drawable/edit_text_rename" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cancelMaterialImageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_cancel_foreground"
            android:background="@null"
            android:layout_marginEnd="20dp" />
        <ImageButton
            android:id="@+id/applyMaterialName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/ic_ok_foreground"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/renameMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_rename_foreground"
            android:background="@null"
            android:visibility="gone">
        </ImageButton>

        <ImageButton
            android:id="@+id/trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_trash_foreground"
            android:background="@null">
        </ImageButton>

        <ImageButton
            android:id="@+id/addToFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@mipmap/ic_folders_foreground"
            android:background="@null">
        </ImageButton>

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_share_foreground"
            android:background="@null">
        </ImageButton>

    </LinearLayout>
</LinearLayout>